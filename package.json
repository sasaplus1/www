{
  "browserslist": {
    "production": [
      "last 2 ChromeAndroid versions",
      "last 2 Edge versions",
      "last 3 Chrome versions",
      "last 3 Firefox versions",
      "last 3 Safari versions",
      "last 3 iOS versions"
    ]
  },
  "devDependencies": {
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "ress": "^2.0.2",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-prettier": "^1.1.1"
  },
  "engines": {
    "node": "^12.13.0",
    "yarn": "^1.19.1"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "postcss ./sources/css/index.css -o ./static/index.css",
    "build:html": "docker-compose run --rm --service-ports build",
    "build:netlify": "run-s build:css && hugo --gc --minify",
    "fix": "run-s fix:*",
    "fix:css": "stylelint --cache --fix '**/*.css'",
    "fix:js": "eslint --cache --fix .",
    "fixpack": "npx fixpack",
    "lint": "run-s lint:*",
    "lint:css": "stylelint --cache '**/*.css'",
    "lint:js": "eslint --cache .",
    "serve": "docker-compose run --rm --service-ports serve",
    "server": "run-s serve",
    "sh": "docker-compose run --rm --service-ports sh",
    "watch": "run-p watch:*",
    "watch:css": "yarn run build:css --watch"
  }
}
